<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/optionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/appbar_padding"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/appbar_padding"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/card_group_all_cards"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <View
        android:id="@+id/divider2"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="?android:attr/listDivider" />

    <CheckBox
        android:id="@+id/toggleSelection"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:checked="true"
        android:contentDescription="@string/selection_toggel_button"
        android:focusable="false" />

</LinearLayout>